		text(0, 3, "Happy Thanksgiving, eh?", font=4, cex=1.5)#
	} else {text(0, 3, "Happy Thanksgiving!", font=4)}#
	# From, to#
	if (!is.null(from)) {mtext(paste("From:", from), col="darkgray")}#
	if (!is.null(to)) {mtext(paste("To:", to), side=1, col="darkgray")}#
